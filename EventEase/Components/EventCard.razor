@using EventEase.Models

<div class="col-lg-4 col-md-6 mb-4">
    <div class="card event-card h-100">
        <div class="card-body">
            <div class="event-date">
                <div class="h4 mb-0">@Event.ShortDay</div>
                <div class="small">@Event.ShortMonth @Event.ShortYear</div>
            </div>

            <h5 class="card-title">@Event.Name</h5>

            <p class="event-location mb-3">
                <i class="fas fa-map-marker-alt me-2"></i>
                @Event.Location
            </p>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <span class="badge @(Event.IsAvailable ? "bg-success" : "bg-danger")">
                    @if (Event.IsAvailable)
                    {
                        <text>@Event.AvailableSpots lugares disponibles</text>
                    }
                    else
                    {
                        <text>Agotado</text>
                    }
                </span>
                <small class="text-muted">@Event.RegisteredCount/@Event.Capacity</small>
            </div>

            <div class="d-grid gap-2">
                <a href="/event-details/@Event.Id" class="btn btn-primary">
                    <i class="fas fa-info-circle me-2"></i>Ver Detalles
                </a>
                <a href="/register/@Event.Id" class="btn btn-outline-success @(!Event.IsAvailable ? "disabled" : "")">
                    <i class="fas fa-user-plus me-2"></i>Registrarse
                </a>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired] public Event Event { get; set; } = null!;
}
