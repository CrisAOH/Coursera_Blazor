@page "/"
@using EventEase.Services
@using EventEase.Models
@inject EventService EventService
@rendermode InteractiveServer

<PageTitle>EventEase - Inicio</PageTitle>

<div class="page-header">
    <div class="container text-center">
        <h1 class="display-4 mb-3">
            <i class="fas fa-calendar-alt me-3"></i>Bienvenido a EventEase
        </h1>
        <p class="lead">Tu plataforma de gestión de eventos corporativos y sociales</p>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="text-center mb-5">
                <h2 class="mb-4">Próximos Eventos Destacados</h2>
                <p class="text-muted">Descubre los mejores eventos disponibles</p>
            </div>

            @if (isLoading)
            {
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var eventItem in featuredEvents)
                    {
                        <EventCard Event="eventItem" />
                    }
                </div>

                <div class="text-center mt-4">
                    <a href="/events" class="btn btn-primary btn-lg">
                        <i class="fas fa-calendar me-2"></i>Ver Todos los Eventos
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<Event> featuredEvents = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        var allEvents = await EventService.GetEventsAsync();
        featuredEvents = allEvents.Take(3).ToList();
        isLoading = false;
    }
}
