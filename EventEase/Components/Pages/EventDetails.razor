@page "/event-details/{EventId:int}"
@using EventEase.Services
@using EventEase.Models
@inject EventService EventService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>@(currentEvent?.Name ?? "Detalles del Evento") - EventEase</PageTitle>

@if (isLoading)
{
    <div class="container text-center mt-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando evento...</span>
        </div>
    </div>
}
else if (currentEvent == null)
{
    <div class="container text-center mt-5">
        <i class="fas fa-calendar-times fa-4x text-muted mb-3"></i>
        <h2>Evento no encontrado</h2>
        <p class="text-muted">El evento que buscas no existe o ha sido eliminado.</p>
        <a href="/events" class="btn btn-primary">
            <i class="fas fa-arrow-left me-2"></i>Volver a Eventos
        </a>
    </div>
}
else
{
    <div class="container mt-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                <li class="breadcrumb-item"><a href="/events">Eventos</a></li>
                <li class="breadcrumb-item active">@currentEvent.Name</li>
            </ol>
        </nav>

        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h1 class="card-title mb-0">@currentEvent.Name</h1>
                    </div>
                    <div class="card-body">
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h5><i class="fas fa-calendar-alt text-primary me-2"></i>Fecha y Hora</h5>
                                <p class="text-muted">@currentEvent.FormattedDate</p>
                            </div>
                            <div class="col-md-6">
                                <h5><i class="fas fa-map-marker-alt text-primary me-2"></i>Ubicación</h5>
                                <p class="text-muted">@currentEvent.Location</p>
                            </div>
                        </div>

                        <h5><i class="fas fa-info-circle text-primary me-2"></i>Descripción</h5>
                        <p>@currentEvent.Description</p>

                        <div class="row mt-4">
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h3 class="text-primary">@currentEvent.Capacity</h3>
                                        <p class="mb-0">Capacidad Total</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h3 class="@(currentEvent.IsAvailable ? "text-success" : "text-danger")">@currentEvent.AvailableSpots</h3>
                                        <p class="mb-0">Lugares Disponibles</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Registro al Evento</h5>
                    </div>
                    <div class="card-body">
                        <div class="progress mb-3">
                            <div class="progress-bar" style="width: @(currentEvent.OccupancyPercentage)%"></div>
                        </div>
                        <p class="text-center mb-3">
                            <strong>@currentEvent.RegisteredCount</strong> de <strong>@currentEvent.Capacity</strong> registrados
                        </p>

                        <div class="d-grid gap-2">
                            @if (currentEvent.IsAvailable)
                            {
                                <a href="/register/@currentEvent.Id" class="btn btn-success btn-lg">
                                    <i class="fas fa-user-plus me-2"></i>Registrarse Ahora
                                </a>
                            }
                            else
                            {
                                <button class="btn btn-secondary btn-lg" disabled>
                                    <i class="fas fa-times me-2"></i>Evento Lleno
                                </button>
                            }
                            <a href="/events" class="btn btn-outline-primary">
                                <i class="fas fa-arrow-left me-2"></i>Volver a Eventos
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public int EventId { get; set; }

    private Event? currentEvent;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        currentEvent = await EventService.GetEventByIdAsync(EventId);
        isLoading = false;
    }

    protected override async Task OnParametersSetAsync()
    {
        if (!isLoading)
        {
            isLoading = true;
            currentEvent = await EventService.GetEventByIdAsync(EventId);
            isLoading = false;
            StateHasChanged();
        }
    }
}